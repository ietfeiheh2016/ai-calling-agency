# Application
NODE_ENV=production
PORT=5000
API_URL=https://your-backend.railway.app
FRONTEND_URL=https://your-app.vercel.app

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
COOKIE_SECRET=your-cookie-secret-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-prod

# Supabase Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-ID].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Upstash Redis
REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT]:6379
UPSTASH_REDIS_REST_URL=https://[ENDPOINT].upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Resend Email
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=AI Calling Agency

# Optional External APIs
OPENAI_API_KEY=your-openai-api-key
SYNTHFLOW_API_KEY=your-synthflow-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_2FA=true
ENABLE_QUEUE_UI=false
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-app-git-main.vercel.app